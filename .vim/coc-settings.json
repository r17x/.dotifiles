{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "rescript": {
      "enable": true,
      "module": "~/.vim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "reason": {
      "command": "~/.local/bin/reason-language-server",
      "filetypes": ["reason"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "sh.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "👿",
  "diagnostic.warningSign": "⚠️",
  "diagnostic.infoSign": "ℹ️",
  "diagnostic.hintSign": "👀",
  "codeLens.enable": true,
  "suggest.snippetIndicator": "~>",
  "coc.preferences.formatOnSaveFiletypes": [
    "bash",
    "shell",
    "zsh",
    "reason",
    "rescript",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "json",
    "java",
    "yaml"
  ],
  "java.jdt.ls.vmargs": "-Dfile.encoding=UTF-8 -noverify -Xmx1G -XX:+UseG1GC",
  "java.trace.server": "verbose",
  "java.format.settings.url": "/home/r177/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
  "java.home": "/usr/lib/jvm/java-11-openjdk"
}
